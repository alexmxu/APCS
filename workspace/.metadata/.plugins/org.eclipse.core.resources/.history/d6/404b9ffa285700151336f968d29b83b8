/**
 * Implements the game of Craps logic.
 *
 * @author Alex Xu
 * @version 9/9/15
 * @author Period: 4
 * @author Assignment: JMCh07_RollingDice
 *
 * @author Sources: Alex Xu
 */
public class CrapsGame
{
    private int point = 0;


    /**
     * Calculates the result of the next dice roll in the Craps game. The
     * parameter total is the sum of dots on two dice. point is set to the saved
     * total, if the game continues, or 0, if the game has ended. Returns 1 if
     * player won, -1 if player lost, 0 if player continues rolling.
     */
    public int processRoll( int total )
    {
        boolean firstRoll = true;
        int result = 0;
        if ( firstRoll )
        {
            switch ( total )
            {
                case 2:
                    result = -1;
                    break;
                case 3:
                    result = -1;
                    break;
                case 7:
                    result = 1;
                    break;
                case 11:
                    result = 1;
                    break;
                case 12:
                    result = -1;
                    break;
                default:
                    firstRoll = false;
                    point = total;
                    break;
            }
        }
        else
        {
            if ( total == point )
            {
                result = 1;
            }
            else if ( total == 7 )
            {
                result = -1;
            }
        }
        return result;
    }


    /**
     * Returns the saved point
     */
    public int getPoint()
    {
        return point;
    }
}